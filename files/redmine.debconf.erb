# Redmine instances to be configured or upgraded:
redmine	redmine/current-instances	string	<% instances.each do |instance| -%> <%= instance -%> <% end -%> 

<% instances.each do |instance| -%>

# Perform upgrade on database for redmine/instances/default with dbconfig-common?
redmine	redmine/instances/default/dbconfig-upgrade	boolean	true
# Default Language
redmine	redmine/instances/default/default-language	select	en
# Port number for the  service:
redmine	redmine/instances/default/remote/port	string

# Set admin password
redmine	redmine/instances/default/password-confirm	password	#admin_password
# Confirm admin password
redmine	redmine/instances/default/app-password-confirm	password	#admin_password

# Database Configuration

# Configure database for redmine/instances/default with dbconfig-common?
redmine	redmine/instances/default/dbconfig-install	boolean	false
# Database type to be used by redmine/instances/default:
# Choices: sqlite3, pgsql, mysql
redmine	redmine/instances/default/database-type	select	mysql
# Connection method for MySQL database of redmine/instances/default:
# Choices: unix socket, tcp/ip
redmine	redmine/instances/default/mysql/method	select	unix socket
# Host name of the  database server for redmine/instances/default:
redmine	redmine/instances/default/remote/host	select
# Name of the database's administrative user:
redmine	redmine/instances/default/mysql/admin-user	string	root
# db_root_password
redmine	redmine/instances/default/mysql/admin-pass	password	#db_password

#  database for mysql app user
redmine	redmine/instances/default/db/dbname	string	redmine_#instance
#  username for mysql app user
redmine	redmine/instances/default/db/app-user	string	redmine
#  password for mysql app user
redmine	redmine/instances/default/mysql/app-pass	password	zortog

# Host running the  server for redmine/instances/default:
redmine	redmine/instances/default/remote/newhost	string	
#  storage directory for redmine/instances/default:
redmine	redmine/instances/default/db/basepath	string	
<% end -%>
